{
    "manifest_version": 3,
    "name": "Auto Refresh",
    "version": "0.1",
    "description": "Refresh the page by set interval",
    
    "action": {
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"]
        }
    ],
    
    "permissions": ["activeTab"]
}
